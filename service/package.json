{
  "name": "@blog/service",
  "version": "6.21.2",
  "description": "core build service",
  "author": "Aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquariuslt/blog.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild::service:prod": "yarn run build:service",
    "build:service:prod": "cross-env NODE_ENV=production node -r tsconfig-paths/register -r ts-node/register dist/main",
    "prebuild:service": "yarn clean",
    "build:service": "nest build",
    "start:service": "nest start",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@blog/api": "^6.21.2",
    "@blog/article": "^6.21.2",
    "@blog/common": "^6.21.2",
    "@blog/config": "^6.21.2",
    "@blog/markdown": "^6.21.2",
    "@blog/pwa": "^6.21.2",
    "@blog/router": "^6.21.2",
    "@nestjs/common": "6.11.8",
    "@nestjs/core": "6.11.8",
    "@nestjs/platform-express": "6.11.8",
    "@nestjs/serve-static": "2.0.0",
    "class-transformer": "0.2.3",
    "class-validator": "0.11.0",
    "cosmiconfig": "6.0.0",
    "date-fns": "2.10.0",
    "fancy-log": "1.3.3",
    "fs-extra": "8.1.0",
    "get-port": "5.1.1",
    "lodash": "4.17.15",
    "log4js": "6.1.2",
    "puppeteer": "2.1.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "6.14.2",
    "@nestjs/schematics": "6.9.4",
    "@nestjs/testing": "6.11.8",
    "@types/express": "4.17.2",
    "@types/fancy-log": "1.3.1",
    "@types/fs-extra": "8.1.0",
    "@types/jest": "25.1.3",
    "@types/lodash": "4.14.149",
    "@types/node": "13.7.6",
    "@types/puppeteer": "2.0.1",
    "@types/supertest": "2.0.8",
    "cross-env": "7.0.0",
    "jest": "25.1.0",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "tsc-watch": "4.1.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.*\\.md$": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "!**/__tests__/**",
      "<rootDir>/src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/coverage"
  }
}
