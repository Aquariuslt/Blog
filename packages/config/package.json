{
  "name": "@blog/config",
  "version": "6.17.5",
  "description": "configuration module",
  "author": "aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog#readme",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "private": true,
  "main": "dist/index.js",
  "esnext": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:cov": "jest --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "cosmiconfig": "^5.2.1",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/fancy-log": "^1.3.1",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.141",
    "@types/node": "^12.7.8",
    "jest": "^24.9.0",
    "jest-raw-loader": "^1.0.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.*\\.md$": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "!**/__tests__/**",
      "<rootDir>/src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/reports/coverage"
  }
}
