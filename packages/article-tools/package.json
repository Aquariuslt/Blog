{
  "name": "@blog/article-tools",
  "version": "6.14.4",
  "description": "blog markdown article tools",
  "author": "Aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquariuslt/blog.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "esnext": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:cov": "jest --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@blog/common": "^6.14.4",
    "@blog/markdown": "^6.14.4",
    "highlight.js": "^9.15.10",
    "lodash": "^4.17.15",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.4",
    "mkdirp": "^0.5.1",
    "rimraf": "^3.0.0",
    "uslug": "^1.0.4"
  },
  "devDependencies": {
    "@types/fancy-log": "^1.3.1",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.141",
    "@types/markdown-it": "^0.0.9",
    "@types/node": "^12.7.8",
    "jest": "^24.9.0",
    "jest-raw-loader": "^1.0.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.*\\.md$": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "!**/__tests__/**",
      "<rootDir>/src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/reports/coverage"
  }
}
