{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://github.com/aquariuslt/blog/config.schema.json",
  "title": "Blog Configuration",
  "description": "blog config file yml specification",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "default": "1.0.0"
    },
    "site": {
      "$ref": "#/definitions/site"
    },
    "build": {
      "$ref": "#/definitions/build"
    },
    "features": {
      "$ref": "#/definitions/features"
    }
  },
  "required": ["version", "site", "build"],
  "definitions": {
    "site": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "format": "url",
          "description": "Your host, e.g. http://your-site.com or https://my-site.com."
        },
        "title": {
          "type": "string",
          "description": "Your blog title."
        },
        "author": {
          "type": "string",
          "description": "Your name"
        },
        "avatar": {
          "type": "string",
          "description": "Your profile picture"
        },
        "subtitle": {
          "type": "string",
          "description": "Your blog sub title"
        },
        "description": {
          "type": "string",
          "description": "Your blog description, this usually will built in html head meta"
        },
        "language": {
          "type": "string",
          "description": "Your prefer language",
          "enum": ["zh", "en"],
          "default": "zh"
        },
        "copyright": {
          "type": "string",
          "description": "Site copyright, usually appear under your website",
          "default": "copyright 2019 aquariuslt blog"
        }
      },
      "required": ["host", "title", "subtitle", "description"]
    },
    "build": {
      "type": "object",
      "properties": {
        "directory": {
          "type": "object",
          "properties": {
            "posts": {
              "type": "string",
              "description": "markdown posts file base directory, relative to project root path",
              "default": "posts"
            },
            "public": {
              "type": "string",
              "description": "build location path",
              "default": "dist"
            }
          },
          "required": []
        },
        "favicon": {
          "type": "string",
          "description": "Your favicon file location",
          "default": "favicon.ico"
        },
        "theme": {
          "type": "string",
          "description": "Your blog theme package name, not implementation now",
          "default": "vue"
        },
        "colors": {
          "type": "object",
          "description": "Your blog theme color preset from material color customization",
          "default": {}
        }
      },
      "required": []
    },
    "features": {
      "type": "object",
      "properties": {
        "ga": {
          "type": "string",
          "description": "Your Google Analytics tracking id"
        },
        "disqus": {
          "type": "string",
          "description": "Your disqus short id"
        }
      },
      "required": []
    }
  }
}
