{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@editor/*": ["src/*"]
    },
    "lib": ["es2018", "es6", "esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "webpack/**/*.ts", "gulpfile.ts", "package.json"],
  "exclude": ["node_modules"]
}
