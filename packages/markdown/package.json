{
  "name": "@blog/markdown",
  "version": "6.21.2",
  "description": "markdown utils for parsing blog articles",
  "author": "Aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquariuslt/blog.git"
  },
  "main": "index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "build:lib": "tsc"
  },
  "dependencies": {
    "@blog/common": "^6.21.2",
    "cheerio": "1.0.0-rc.3",
    "gray-matter": "4.0.2",
    "lodash": "4.17.15",
    "markdown-it": "10.0.0",
    "markdown-it-anchor": "5.2.5",
    "uslug": "1.0.4"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.16",
    "@types/jest": "25.1.3",
    "@types/lodash": "4.14.149",
    "@types/markdown-it": "0.0.9",
    "@types/node": "13.7.6",
    "jest": "25.1.0",
    "jest-raw-loader": "1.0.1",
    "rimraf": "3.0.2",
    "ts-jest": "25.2.1",
    "typescript": "3.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.*\\.md$": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "!**/__tests__/**",
      "<rootDir>/src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/coverage"
  }
}
