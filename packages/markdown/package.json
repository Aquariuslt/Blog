{
  "name": "@blog/markdown",
  "version": "6.0.0",
  "description": "markdown utils for parsing blog articles",
  "author": "Aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquariuslt/blog.git"
  },
  "main": "dist/index.js",
  "esnext": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@blog/common": "^6.0.0",
    "gray-matter": "^4.0.2",
    "lodash": "^4.17.15",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.4",
    "uslug": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.141",
    "@types/markdown-it": "^0.0.9",
    "@types/node": "^12.7.8",
    "jest": "^24.9.0",
    "jest-raw-loader": "^1.0.1",
    "ts-jest": "^24.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest",
      "^.*\\.md$": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "!**/__tests__/**",
      "<rootDir>/src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/reports/coverage"
  }
}
