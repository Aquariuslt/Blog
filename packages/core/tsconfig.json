{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es6",
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": false,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "__tests__", "reports"]
}
