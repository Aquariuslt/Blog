{
  "name": "@blog/application",
  "version": "6.14.12",
  "description": "core application",
  "author": "Aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquariuslt/blog.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node -r ts-node/register -r tsconfig-paths/register dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk -r ts-node/register -r tsconfig-paths/register dist/main.js\"",
    "start:prod": "node -r tsconfig-paths/register -r ts-node/register dist/main.js",
    "build:prod": "cross-env NODE_ENV=production node -r tsconfig-paths/register -r ts-node/register dist/main.js",
    "prestart:prod": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@blog/api-generator": "^6.14.12",
    "@blog/article-tools": "^6.14.12",
    "@blog/common": "^6.14.12",
    "@blog/config": "^6.14.12",
    "@blog/markdown": "^6.14.12",
    "@blog/pwa-tools": "^6.14.12",
    "@blog/routes-tools": "^6.14.12",
    "@nestjs/common": "^6.8.3",
    "@nestjs/core": "^6.8.3",
    "@nestjs/platform-express": "^6.8.3",
    "@nestjs/serve-static": "^1.0.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "cosmiconfig": "^5.2.1",
    "date-fns": "^2.3.0",
    "fancy-log": "^1.3.3",
    "fs-extra": "^8.1.0",
    "get-port": "^5.0.0",
    "lodash": "^4.17.15",
    "puppeteer": "^1.20.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.7.3",
    "@types/express": "^4.17.0",
    "@types/fancy-log": "^1.3.1",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.139",
    "@types/node": "12.7.6",
    "@types/puppeteer": "^1.20.2",
    "@types/supertest": "2.0.8",
    "cross-env": "^6.0.3",
    "jest": "24.9.0",
    "supertest": "4.0.2",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "tsc-watch": "4.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/**/*.module.ts"
    ],
    "coverageDirectory": "<rootDir>/reports/coverage",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*/__tests__/**/*.test.ts"
    ]
  }
}
