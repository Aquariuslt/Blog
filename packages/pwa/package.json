{
  "name": "@blog/pwa",
  "version": "6.19.0",
  "description": "progressive web application tools including workbox + prerendering",
  "keywords": [
    "pwa",
    "workbox",
    "prerender"
  ],
  "author": "aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog#readme",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquariuslt/blog.git"
  },
  "private": true,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "build:lib": "tsc"
  },
  "dependencies": {
    "@blog/common": "^6.19.0",
    "lodash": "^4.17.15",
    "workbox-build": "^4.3.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.14",
    "jest": "^24.9.0",
    "jest-raw-loader": "^1.0.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.*\\.md$": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "!**/__tests__/**",
      "<rootDir>/src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/coverage"
  }
}
