    "webpack": "^4.29.5",
    "webpack-dev-middleware": "^3.6.0",
    "webpack-dev-server": "^3.2.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.2.1",
    "webpack-pwa-manifest": "^4.0.0",
    "xml": "^1.0.1",
    "yorkie": "^2.0.0"
  },
  "workspaces": [
    "packages/@blog/*",
    "packages/@utils/*"
  ],
  "types": "types/index.d.ts",
  "config": {
    "base": {
      "dir": {
        "src": "src",
        "build": "build",
        "packages": "packages",
        "dist": {
          "root": "dist",
          "js": "static/js",
          "css": "static/css",
          "img": "static/img",
          "fonts": "static/fonts",
          "manifest": "static/manifest"
        },
        "test": {
          "unit": "test/unit",
          "e2e": "test/e2e"
        }
      },
      "dev": {
        "port": 8080
      }
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{ts|tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "jest": {
    "verbose": true,
    "cache": false,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      ".*\\.(vue)$": "vue-jest",
      ".*\\.md$": "jest-raw-loader"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "testMatch": [
      "<rootDir>/packages/@blog/**/*.test.ts",
      "<rootDir>/packages/@utils/**/*.test.ts"
    ],
    "coverageDirectory": "<rootDir>/test/unit/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,vue}",
      "packages/@blog/**/src/**/*.ts",
      "packages/@utils/**/src/**/*.ts",
      "!**/tasks/**",
      "!**/test/**",
      "!**/node_modules/**"
    ]
  }
}
