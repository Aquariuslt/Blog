  "workspaces": [
    "packages/@blog/*",
    "packages/@utils/*",
    "packages/@theme/*",
    "packages/@types/*"
  ],
  "config": {
    "base": {
      "dir": {
        "src": "src",
        "build": "build",
        "tscbuild": "tsc-build",
        "packages": "packages",
        "dist": {
          "root": "dist",
          "js": "static/js",
          "css": "static/css",
          "img": "static/img",
          "fonts": "static/fonts",
          "manifest": "static/manifest",
          "packages": "packages/**/*/dist"
        },
        "test": {
          "unit": "test/unit",
          "e2e": "test/e2e"
        }
      },
      "dev": {
        "port": 3000
      }
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "function-paren-newline": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/explicit-function-return-type": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": true,
    "arrowParens": "always",
    "proseWrap": "never",
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "linters": {
      "{src,test,packages}/**/*.{ts|tsx}": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "./node_modules"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "jest": {
    "verbose": true,
    "cache": false,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "@/config.json": "<rootDir>/build/config.json",
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/tsc-build"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      ".*\\.md$": "jest-raw-loader"
    },
    "setupFilesAfterEnv": [
      "jest-enzyme"
    ],
    "testEnvironment": "enzyme",
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/packages/@blog/**/*.test.ts",
      "<rootDir>/packages/@utils/**/*.test.ts",
      "<rootDir>/packages/@theme/**/*.test.ts?(x)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "packages/@blog/**/lib/**/*.ts",
      "packages/@utils/**/lib/**/*.ts",
      "packages/@theme/**/src/**/*.tsx",
      "!packages/@theme/**/src/index.tsx",
      "!src/main.ts",
      "!src/offline.ts",
      "!**/tasks/**",
      "!**/test/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/reports/coverage",
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
