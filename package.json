    "address": "^1.0.3",
    "ajv": "^6.9.2",
    "autoprefixer": "^9.4.8",
    "connect-history-api-fallback": "^1.6.0",
    "css-loader": "^2.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fancy-log": "^1.3.3",
    "file-loader": "^3.0.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "glob": "^7.1.2",
    "gts": "^0.9.0",
    "gulp": "^4.0.0",
    "gulp-inject-string": "^1.1.2",
    "gulp-rename": "^1.2.2",
    "gulp-rimraf": "^0.2.2",
    "gulp-yaml": "^2.0.3",
    "html-webpack-plugin": "^3.2.0",
    "http-proxy-middleware": "^0.19.1",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
