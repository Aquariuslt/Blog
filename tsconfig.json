{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "tsc-build",
    "lib": [
      "es2018",
      "dom"
    ],
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "build/*"
      ],
      "@*": [
        "packages/@*"
      ]
    }
  },
  "exclude": [
    "./dist",
    "./tsc-build"
  ]
}
