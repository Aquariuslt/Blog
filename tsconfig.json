{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "tsc-build",
    "lib": [
      "es2018",
      "dom"
    ],
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "packages",
    "paths": {
      "@blog/*": [
        "./*/src"
      ],
      "@utils/*": [
        "./*/src"
      ],
      "@theme/*": [
        "./*/src"
      ]
    }
  }
}
