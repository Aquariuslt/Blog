{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "es5",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "./*": [
        "./src"
      ],
      "@schemas/*": [
        "./*/types"
      ],
      "@blog/*": [
        "./*/lib"
      ],
      "@utils/*": [
        "./*/lib"
      ],
      "@theme/*": [
        "./*/src"
      ]
    }
  }
}
